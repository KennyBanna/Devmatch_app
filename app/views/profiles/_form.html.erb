<%= form_for @profile, url: user_profile_path, html: {multipart: true} do |f| %> 
  <div class="form-group">
    <%= label_tag :fname, 'First Name' %>
    <%= f.text_field :fname, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :lname, 'Last Name' %>
    <%= f.text_field :lname, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :avatar, 'Profile picture' %>
    <%= f.file_field :avatar %>
  </div>
  
  <div class="form-group">
    <%= label_tag :title, 'Job title' %>
    <%= f.select :title, ['Developer', 'Entrepeneur', 'Student'], class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :description, 'Description' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.submit 'Submit profile', class: 'btn btn-success' %>
  </div>
<% end %> 