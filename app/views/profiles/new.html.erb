<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <h1>Create your profile</h1>
      <div class="well">
        
        <%= form_for @profile, url: user_profile_path do |f| %> 
          <div class="form-group">
            <%= label_tag :fname, 'First Name' %>
            <%= f.text_field :fname, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= label_tag :lname, 'Last Name' %>
            <%= f.text_field :lname, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :title, 'Job title' %>
            <%= f.select :title, ['Developer', 'Entrepeneur', 'Student'], class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :description, 'Description' %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.submit 'Submit profile', class: 'btn btn-success' %>
          </div>
        <% end %> 
        
      </div>
    </div>
  </div>
</div>