<div class="container">
  <div class="row">
    <div class="col-md-2 col-md-offset-1">
      <%= image_tag @user.profile.avatar.url, class: 'profile-avatar' %>
    </div>
    <div class="col-md-6">
      <h1><%= @user.profile.fname + " " + @user.profile.lname %></h1>
      <h3><%= @user.profile.title %></h3><br/>
      <div class="well profile-basic-info">
        <h3>About Me</h3>
        <p><%= @user.profile.description %></p>
      </div>
      <% if current_user.plan_id == 2 || @user == current_user %>
        <div class="well profile-contact-info">
          <h3>Contact Me</h3>
          <p><%= @user.email%></p>
        </div>
      <% end %>
      <% # Users visiting their own page get increased functionality %>
      <% if @user == current_user %>
        <%= render 'personal' %>
      <% end %>
    </div>
  </div> 
</div>