<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center community-logo">Community</h1>
      <ul class="list-unstyled">
        <% @users.each do |u| %>
          <% if u.profile %>
            <li>
              <div class="row well <%= cycle('white-bg', ' ') %>">
                <div class="col-sm-3">
                  <%= image_tag u.profile.avatar.url, class: 'profile-avatar' %>
                </div>
                <div class="col-sm-6">
                  <%= link_to u, class: 'profile-name-link' do %>
                    <h3><%= u.profile.fname + " " + u.profile.lname %></h3>
                  <% end %>
                  <p><%= u.profile.title %></p>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>

