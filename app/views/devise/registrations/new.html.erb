
<div class="container">
  <div class="row">
    <div class="well col-md-6 col-md-offset-3">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render 'pro' %>
      <% elsif params[:plan] == '1' %>
        <%= render 'basic' %>
      <% end %>
      
      <%= devise_error_messages! %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

